<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <Frame name="TenaciousRaidToolsMainFrame" parent="UIParent" 
    inherits="SimplePanelTemplate" clampedToScreen="true" enableMouse="true" movable="true" toplevel="true" hidden="true">
        <Scripts>
            <OnLoad>
				self:RegisterForDrag("LeftButton");
				local tc = TenaciousRaidToolsMainFramePaddington
				tc:Disable();
			</OnLoad>
            <OnDragStart>self:StartMoving();</OnDragStart>
            <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
        </Scripts>
        <Size x="300" y="400"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
			<Layer level="ARTWORK">
				<!-- TODO: Cool UI -->
				<FontString parentKey="pageNumber" inherits="GameFontHighlightSmall" text="Tenacious Raid Tools">
					<Anchors>
						<Anchor point="CENTER" relativePoint="TOPLEFT" x="145" y="-16"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
        <Frames>
			<FontString inherits="GameFontNormal" name="$parentHeader">
				<Size x="400" y="50"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-10"/>
				</Anchors>
				<Text>This is an addon from the Tenacious guild with some functionality that its raiders have found useful.</Text>
			</FontString>
			
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Size x="32" y="32"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="-2" y="-2"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        TenaciousRaidToolsMainFrame:Hide();
                    </OnClick>
                </Scripts>
            </Button>
			
			<CheckButton name="$parentPaddington" inherits="UICheckButtonTemplate">
				<Size x="26" y="26"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="10" y="-50"/>
				</Anchors>
				<Scripts>
					<OnClick>
						
					</OnClick>
				</Scripts>
				<Layers>
					<Layer level="OVERLAY">
						<FontString inherits="GameFontNormalSmall" text="Estimate kill time on mob tooltips">
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent" relativePoint="RIGHT" x="5" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</CheckButton>
        </Frames>
    </Frame>
</Ui>